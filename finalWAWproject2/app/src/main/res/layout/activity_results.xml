<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Results">

    <TextView
        android:id="@+id/winHeader"
        android:layout_width="305dp"
        android:layout_height="60dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="55dp"
        android:text="@string/winnerHeader"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/winner"
        android:layout_width="206dp"
        android:layout_height="112dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="61dp"
        app:layout_constraintBottom_toTopOf="@+id/winOrLose"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winHeader" />

    <AutoCompleteTextView
        android:id="@+id/winOrLose"
        android:layout_width="206dp"
        android:layout_height="112dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="109dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toTopOf="@+id/thanks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/winHeader"
        app:layout_constraintVertical_bias="0.95" />

    <TextView
        android:id="@+id/thanks"
        android:layout_width="333dp"
        android:layout_height="67dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="100dp"
        android:text="@string/thanks"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="31dp"
        android:text="@string/playAgain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thanks" />

</androidx.constraintlayout.widget.ConstraintLayout>